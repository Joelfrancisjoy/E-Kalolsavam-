{
  "name": "e-kalolsavam-playwright-tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for E-Kalolsavam application",
  "scripts": {
    "test": "playwright test",
    "test:setup": "playwright test tests/playwright/simple/",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:auth": "playwright test tests/playwright/auth/",
    "test:events": "playwright test tests/playwright/events/",
    "test:dashboard": "playwright test tests/playwright/dashboard/",
    "test:admin": "playwright test tests/playwright/admin/",
    "test:api": "playwright test tests/playwright/api/",
    "test:smoke": "playwright test tests/playwright/smoke/",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "setup:servers": "scripts/setup-servers.bat",
    "check:servers": "node scripts/check-servers.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "allure-playwright": "^2.10.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
